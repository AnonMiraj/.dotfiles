#!/bin/sh

filter() {
  sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/‚è∏/g;/\\[playing\\].*/d;/^ERROR/Q" | paste -sd ' ' -
}

filter2() {
  sed -e '1d;$d' -e 's/\[playing\]/ÔÅã /' -e 's/\[paused\]/ÔÅå /' -e 's/#\([0-9]\+\/[0-9]\+\)//' -e 's/ \+/ /g' | paste -sd ' ' -
}
# filter2() {
  # sed -e '1d;$d' -e 's/\[playing\]/ÔÅã\ /' -e 's/\[paused\]/ÔÅå\ /' -e 's/#\([0-9]\+\/[0-9]\+\)//' -e 's/ //g' | paste -sd ' ' -
# }
pidof -x sb-mpdup >/dev/null 2>&1 || sb-mpdup >/dev/null 2>&1 &

case $BLOCK_BUTTON in
  1) mpc status | filter2 ; setsid -f "$TERMINAL" -e ncmpcpp ;;  # right click, pause/unpause
  2) mpc toggle | filter ;;  # right click, pause/unpause
  3) current_song="$(mpc current)"
   mpc status | filter ; notify-send "üéµ Music module" "Now playing: $current_song
- ‚è∏  when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track." ;;
  4) mpc prev | filter ;;  # scroll up, previous
  5) mpc next | filter ;;  # scroll down, next
  6) mpc status | filter2 ; "$TERMINAL" -e "$EDITOR" "$0" ;;
  *) mpc status | filter2 ;;
esac

